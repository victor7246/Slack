  /*
 * Configuration
 *
 * Central configuration for the 'ui-rs-core' module. Configuration variables are
 * set within the '$ui-rs-core' namespace and are avaiable in projects including
 * this module.
 */

@import './brand.import';

$ui-rs-core = {
	types: {},
  colors: {},
	themes: {
		light: {},
		dark: {}
	},
	inputs: {},
	buttons: {},
	iconButtons: {},
  sliders: {}
};

/*
 * Default type setup
 */

 /* set variables in function to keep global namespace clean */

setFontConfig() {
	$fontNormal = 'Raleway', sans-serif
	$fontHeadings = 'Electrolize', sans-serif
	$fontCode = 'Source Code Pro', monospace

  /* NOTE: It's necessary to use e.g. the $fontNormal variable here. Defining
   * multiple fonts directly in here yields a stylus compiler error.
   */
	$fonts = {
     normal: $fontNormal,
     headings: $fontHeadings,
     code: $fontCode
	}

	$ui-rs-core.types.fonts = $fonts;
}
setFontConfig();

setTypeConfig() {
  $defaultFontSize = 1.25rem;
  $defaultButtonInputFontSize = 1rem;

  $ui-rs-core.types.settings = {
    mobilePortrait: {
      h1: { font-family: $fontHeadings, font-size:   2rem, line-height: 1.2, margin-top:   0.1em, margin-bottom:    0.1em, font-weight: 400, text-transform: uppercase },
      h2: { font-family: $fontHeadings, font-size: 1.4rem, line-height: 1.5, margin-top: 1.25rem, margin-bottom: 0.625rem, font-weight: 400, text-transform: uppercase },
      h3: { font-family: $fontHeadings, font-size: 1.4rem, line-height: 1.5, margin-top:       0, margin-bottom: 0.625rem, font-weight: 400, text-transform: uppercase },
      h4: { font-family: $fontHeadings, font-size:   1rem, line-height: 1.5, margin-top:   0.7em, margin-bottom:    0.7em, font-weight: 400, text-transform: uppercase, border-bottom: 1px solid #424242, text-align: center },
      h5: { font-family: $fontHeadings, font-size:   0.9rem, line-height:   1, margin-top:  0.75em, margin-bottom:   0.75em, font-weight: 400, text-transform: uppercase },
      p:  { font-family: $fontNormal,   font-size: $defaultFontSize, line-height: 1.875rem, font-weight: 200 }
      a:  { font-family: $fontNormal,   font-size: $defaultFontSize, line-height: 1.875rem, font-weight: 200 }
    },
    tablet: {
      h1: { font-family: $fontHeadings, font-size:   3.8rem, line-height: 1.2, margin-top:   0.1em, margin-bottom:    0.1em, font-weight: 400, text-transform: uppercase },
      h2: { font-family: $fontHeadings, font-size: 2.375rem, line-height: 1.5, margin-top: 1.25rem, margin-bottom: 0.625rem, font-weight: 400, text-transform: uppercase },
      h3: { font-family: $fontHeadings, font-size: 1.875rem, line-height: 2.75rem, margin-top:  0, margin-bottom:  0.625rem, font-weight: 400, text-transform: uppercase },
      h4: { font-family: $fontHeadings, font-size:     1rem, line-height: 1.5, margin-top:   0.7em, margin-bottom:    0.7em, font-weight: 400, text-transform: uppercase, border-bottom: 1px solid #424242 }
