      p:  { font-family: $fontNormal,   font-size:   $defaultFontSize, line-height: 1.875rem, font-weight: 200 }
      a:  { font-family: $fontNormal,   font-size:   $defaultFontSize, line-height: 1.875rem, font-weight: 200 }
    },
    fontCode: {
      padding: 0.2em,
      radius: 3px
    }
    defaultFontSize: $defaultFontSize,
    defaultButtonInputFontSize: $defaultButtonInputFontSize,
  }
}
setTypeConfig();

/*
 * Default color setup
 */

 /* set variables in function to keep global namespace clean */
setColorConfig() {
	/* export brand colors */
	$ui-rs-core.colors = {
		white: $brandWhite,
		black: $brandBlack,
		red: $brandRed,
		grey: $brandGrey
	}

	/* light theme: */
	$ui-rs-core.themes.light = {
		text: $brandBlack,
		bgBody: $brandWhite,
		link: $brandBlack,
		hover: $brandRed,
		pressed: #6A0000,
		visited: $brandBlack,
		selection: $brandRed,
		bgCode: #f7f7f7,
		colorCode: $brandBlack,
		colourHero: white
	}

	/* dark theme: */
	$ui-rs-core.themes.dark = {
		text: $brandWhite,
		bgBody: $brandBlack,
		link: $brandWhite,
		hover: $brandRed,
		pressed: white,
		visited: $brandWhite,
		selection: $brandRed,
		bgCode: #f7f7f7,
		colorCode: $brandBlack,
		colourHero: white
	}
}
setColorConfig();

/*
 * Default input field setup
 */

setInputConfig() {
	$ui-rs-core.inputs = {
		defaultFontSize: $ui-rs-core.types.settings.defaultButtonInputFontSize,
		minHeight: 2.75em,
		paddingTop: 0.5em,
		paddingBottom: 0.5em,
		paddingLeft: 0.5em,
		paddingRight: 0.5em,
