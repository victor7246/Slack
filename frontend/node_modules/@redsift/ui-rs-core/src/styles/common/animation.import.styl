/* For Javascript change the curves in d3/tools.js */
$curveRedsift = cubic-bezier(0.175, 0.885, 0.335, 1.155)
$timeRedsift = 400ms

/* not using the curve here as fading needs a diffrent shape */
.animate-opacity {
	transition: opacity ease-in $timeRedsift;
}

.fade-in {
	animation: fadein $timeRedsift ease-in 0s 1 normal both;	
}

.delay {
	animation-delay: $timeRedsift;
}

@keyframes fadein {
    from { opacity: 0.0; }
    to   { opacity: 1.0; }
}